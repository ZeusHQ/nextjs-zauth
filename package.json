{
  "name": "@zeushq/nextjs-zauth",
  "description": "Next.js SDK for signin in with Zeus Auth",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/index.browser.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "prebuild": "yarn clean",
    "docs": "typedoc --options typedoc.js src",
    "install:basic": "npm i --prefix=examples/basic-example --no-package-lock",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "build:basic": "npm run build --prefix=examples/basic-example",
    "build:test": "next build tests/fixtures/test-app",
    "start:basic": "npm run dev --prefix=examples/basic-example",
    "test": "jest tests --coverage --maxWorkers=10",
    "test:watch": "jest --coverage --watch"
  },
  "dependencies": {
    "base64url": "^3.0.1",
    "cookie": "^0.4.1",
    "debug": "^4.3.1",
    "futoin-hkdf": "^1.3.2",
    "http-errors": "^1.8.0",
    "joi": "^17.4.0",
    "jose": "^2.0.5",
    "on-headers": "^1.0.2",
    "openid-client": "^4.2.3",
    "tslib": "^2.1.0",
    "url-join": "^4.0.1"
  },
  "peerDependencies": {
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^5.0.3",
    "@types/body-parser": "^1.19.0",
    "@types/clone": "^2.1.0",
    "@types/cookie": "^0.4.0",
    "@types/debug": "^4.1.5",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^16.3.2",
    "@types/on-headers": "^1.0.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/tough-cookie": "^4.0.0",
    "@types/url-join": "^4.0.0",
    "@types/webpack": "^4.41.26",
    "body-parser": "^1.19.0",
    "jest": "^26.6.3",
    "next": "^11.0.1",
    "nock": "^13.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.11.7",
    "timekeeper": "^2.2.0",
    "tough-cookie": "^4.0.0",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.21.4",
    "typescript": "^4.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "./",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "src/**/*.*",
      "!src/index.browser.ts",
      "!src/index.ts",
      "!src/handlers/auth.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "preset": "ts-jest",
    "globalSetup": "./tests/global-setup.ts",
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ]
  }
}
